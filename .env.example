# 환경 설정
# dev: 개발 모드 (모든 로그 출력)
# prd: 프로덕션 모드 (에러만 출력)
ENVIRONMENT=dev

# API 설정
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True

# 애플리케이션 설정
WINDOW_TITLE=
SCREEN_WIDTH=1920
SCREEN_HEIGHT=1080

# 자동화 설정
AUTO_CLICK_DELAY=0.5
AUTO_MOVE_DELAY=1.0
SCREENSHOT_INTERVAL=0.1

# 로그 설정
# 로그 레벨: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
# 로그 파일 저장 디렉토리 (server 폴더 기준 상대 경로)
# 예: log/logs  server/log/logs
LOG_DIR=log/logs